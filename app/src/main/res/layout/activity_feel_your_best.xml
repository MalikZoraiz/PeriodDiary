<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".FeelYourBestActivity">

    <ImageView
        android:id="@+id/back_arrow_feel_best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/without_calendar_bar"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginTop="64dp"
        android:background="#E0E0E0"
        app:layout_constraintEnd_toStartOf="@id/with_calendar_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_arrow_feel_best" />

    <View
        android:id="@+id/with_calendar_bar"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="#7E57C2"
        app:layout_constraintBottom_toBottomOf="@+id/without_calendar_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/without_calendar_bar" />

    <TextView
        android:id="@+id/percentage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20%"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/with_calendar_bar"
        app:layout_constraintStart_toStartOf="@+id/with_calendar_bar"
        app:layout_constraintEnd_toEndOf="@+id/with_calendar_bar"
        app:layout_constraintBottom_toTopOf="@+id/increase_text"/>

    <TextView
        android:id="@+id/increase_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="increase in\ncomfort"
        android:gravity="center"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/with_calendar_bar"
        app:layout_constraintStart_toStartOf="@+id/with_calendar_bar"
        app:layout_constraintEnd_toEndOf="@+id/with_calendar_bar"
        app:layout_constraintTop_toBottomOf="@+id/percentage_text"/>

    <TextView
        android:id="@+id/without_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Without My Period Calendar"
        app:layout_constraintTop_toBottomOf="@id/without_calendar_bar"
        app:layout_constraintStart_toStartOf="@id/without_calendar_bar"
        app:layout_constraintEnd_toEndOf="@id/without_calendar_bar"/>

    <TextView
        android:id="@+id/with_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="With My Period Calendar"
        app:layout_constraintTop_toBottomOf="@id/with_calendar_bar"
        app:layout_constraintStart_toStartOf="@id/with_calendar_bar"
        app:layout_constraintEnd_toEndOf="@id/with_calendar_bar"/>

    <TextView
        android:id="@+id/feel_best_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Feel your best with My Period Calendar!"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/with_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/feel_best_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="With personalized recommendations, users feel 20% more comfortable and have fewer symptoms over time."
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/feel_best_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/step_text_feel_best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Step 7 out of 7"
        app:layout_constraintBottom_toTopOf="@id/progress_bar_feel_best"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progress_bar_feel_best"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:max="7"
        android:progress="7"
        app:layout_constraintBottom_toTopOf="@id/next_button_feel_best"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/next_button_feel_best"
        style="@style/PinkButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>