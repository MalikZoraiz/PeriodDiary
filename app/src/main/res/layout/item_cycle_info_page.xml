<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/info_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19"
        android:textSize="80sp"
        android:textColor="#555555" 
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/info_label_text"/>

    <TextView
        android:id="@+id/info_label_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="days until next period"
        android:textColor="#555555"
        app:layout_constraintTop_toBottomOf="@+id/info_value_text"
        app:layout_constraintStart_toStartOf="@id/info_value_text"
        app:layout_constraintEnd_toEndOf="@id/info_value_text"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>